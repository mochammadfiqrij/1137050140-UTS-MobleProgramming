<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Pesanan Anda:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namakue"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/gambarkue"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:layout_weight="0.35" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/pesanpengirim"
        android:hint="Pesan Anda Kepada Kartu Nama"
        android:layout_weight="0.52" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Kepada"
        android:ems="10"
        android:id="@+id/kepada" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Pengirim"
        android:ems="10"
        android:id="@+id/pengirim" />

    <Button
        android:text="Pesan Sekarang!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pesan" />


</LinearLayout>